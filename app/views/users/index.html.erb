<h4>ユーザ一覧</h4>
<div style="text-align: right">
<%= link_to 'ユーザ新規作成', new_user_path %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>ユーザ名</th>
      <th>メールアドレス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to '詳細', user_path(user) %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user_path(user), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

